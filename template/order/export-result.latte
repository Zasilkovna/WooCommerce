{if !$ignored && !$errors && $success}
	<div class="notice notice-success is-dismissible">
		<p>{$success|noescape}</p>
	</div>
{else}
	{if $ignored}
		<div class="notice notice-info is-dismissible">
			<p>{$ignored|noescape}</p>
		</div>
	{/if}

	{if $errors}
		<div class="notice notice-error is-dismissible">
			<p>{$errors|noescape}</p>
		</div>
	{/if}
{/if}
